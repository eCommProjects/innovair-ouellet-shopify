{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
            "show_vendor": true,
            "show_stock": true,
            "show_sku": true,
            "show_barcode": false,
            "barcode_label": "Barcode",
            "show_rating": false
          }
        },
        "subtitle": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "icon": "",
            "color_scheme": "none"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variants": {
          "type": "variants",
          "settings": {
            "picker_type": "button",
            "hide_single_variant": false,
            "out_of_stock_variants": "hide"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_quantity": true,
            "show_add_to_cart": true,
            "show_buy_now": true
          }
        },
        "availability": {
          "type": "availability",
          "settings": {
          }
        },
        "extra": {
          "type": "extra",
          "settings": {
            "text": "<p>Use this text to encourage <strong>communication<\/strong> or promote <strong>sharing<\/strong> on social networks.<\/p><p><a href=\"#\">You can also add links<\/a><\/p>",
            "show_facebook": true,
            "show_twitter": true,
            "show_linkedin": true
          }
        },
        "description": {
          "type": "description",
          "settings": {
            "title": "Description",
            "expanded": true
          }
        }
      },
      "block_order": [
        "title",
        "subtitle",
        "price",
        "variants",
        "buy_buttons",
        "availability",
        "extra",
        "description"
      ],
      "settings": {
        "hide_variants": false,
        "thumbnail_navigation": false
      }
    },
    "recommendations": {
      "type": "product-recommendations",
      "settings": {
        "show": true,
        "title": "Related products",
        "count": "4",
        "show_vendor": true,
        "show_stock": true,
        "show_rating": false,
        "color_scheme": "background-1",
        "spacing_top": 60,
        "spacing_bottom": 60
      }
    }
  },
  "order": [
    "main",
    "recommendations"
  ]
}